<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/profile_image"
        android:layout_margin="8dp"
        android:contentDescription="profile_image" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.98"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Nome Cognome"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commessa_label"
            android:text="Commessa" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/servizi_label"
            android:text="Servizi"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bianco"
            android:id="@+id/pasti_label"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:text="Consumati: 5 pasti di 30"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:id="@+id/saldo_label"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="8dp"
            android:text="â‚¬ 4,00"
            android:textAlignment="center"
            android:gravity="center|right" />


    </LinearLayout>

</LinearLayout>











